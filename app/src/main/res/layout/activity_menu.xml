<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/splash_bg">


    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn"
            android:onClick="startGame"
            android:text="@string/start" />

        <Button
            android:id="@+id/word_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn"
            android:onClick="wordList"
            android:text="Use Our Word List" />

        <Button
            android:id="@+id/upload_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn"
            android:onClick="uploadYourList"
            android:text="@string/upload_list" />

        <Button
            android:id="@+id/listen_mode_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn"
            android:onClick="setListenMode"
            android:text="Reading Mode" />


    </LinearLayout>

</LinearLayout>
